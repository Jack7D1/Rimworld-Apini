<?xml version="1.0" encoding="utf-8" ?>
<!-- Apini body. -->
<Patch>
	<!-- Checking for Combat Extended. -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Torso equivalent and some of its children. -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li[def = "Abdomen"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>

				<!-- Neck equivalent and its children. -->
				<!-- I guess this bodypart is like a neck for the apini. -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li[def = "Pronotum"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li/parts/li[def = "Head"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li/parts/li/parts/li[def = "InsectNostril"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li/parts/li/parts/li[def = "InsectMouth"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li/parts/li/parts/li/parts/li[def = "Mandible"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>

				<!-- Arms equivalent and its children. -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li[def = "ApiniFrontLeg"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li[customLabel = "left front leg"]/groups</xpath>
					<value>
						<li>LeftArm</li>
						<li>LeftShoulder</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li[customLabel = "right front leg"]/groups</xpath>
					<value>
						<li>RightArm</li>
						<li>RightShoulder</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li/parts/li[def = "Tarsal"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>

				<!-- Legs equivalent and its children. -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li[def = "InsectLeg"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/BodyDef[defName = "Apini"]/corePart/parts/li/parts/li[def = "Tarsus"]/groups</xpath>
					<value>
						<li>CoveredByNaturalArmor</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>