<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ApiniBuildingBase">  <!-- Honeycomb Bed S -->
		<defName>HoneycombBed_S</defName>
		<label>Honeycomb Single bed</label>
		<description>Designed by Apini for anyone who can appreciate the joy of floating weightlessly in a pool of rejuvenating coagulated honey. Specially designed to not stick to your skin!</description>
		<thingClass>Building_Bed</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/Bed/Honeycomb_SingleBed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<rect>(0,0.05,1,1.95)</rect>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Beauty>12</Beauty>
			<WorkToBuild>1500</WorkToBuild>
			<Mass>50</Mass>
			<BedRestEffectiveness>1.25</BedRestEffectiveness>
			<Comfort>1.25</Comfort>
			<ImmunityGainSpeedFactor>1.25</ImmunityGainSpeedFactor>
		</statBases>
		<size>(1,2)</size>
		<researchPrerequisites>
			<li>HoneyConditioning</li>
		</researchPrerequisites>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<costList>
		  <ApiniHoney>60</ApiniHoney>
		  <ApiniWax>30</ApiniWax>
		</costList>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<bed_showSleeperBody>False</bed_showSleeperBody>
			<bed_healPerDay>25</bed_healPerDay>
		</building>
		<comps>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtFurniture</nameMaker>
				<descriptionMaker>ArtDescription_Furniture</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>VitalsMonitor</li>
					<li>EndTable</li>
					<li>Dresser</li>
				</linkableFacilities>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_AssignableToPawn">
				<drawAssignmentOverlay>false</drawAssignmentOverlay>
				<compClass>CompAssignableToPawn_Bed</compClass>
			</li>
		</comps>
		<fillPercent>0.4</fillPercent>
		<pathCost>60</pathCost>
		<castEdgeShadows>False</castEdgeShadows>
		<passability>PassThroughOnly</passability>
		<drawGUIOverlay>True</drawGUIOverlay>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<canOverlapZones>false</canOverlapZones>
		<defaultPlacingRot>South</defaultPlacingRot>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<uiIconScale>0.90</uiIconScale>
	</ThingDef>
	
