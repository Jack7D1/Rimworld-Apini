	<!--============================ ApiniNectar ===============================-->
	<ThingDef ParentName="ResourceBase" Name="ApiniNectarBase" Abstract="True">
		<!-- ApiniNectarBase -->
		<graphicData>
			<texPath>Things/Item/Nectar/Nectar</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>200</stackLimit>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<MarketValue>0.5</MarketValue>
			<Mass>0.02</Mass>
			<Beauty>4</Beauty>
			<Nutrition>0.03</Nutrition>
		</statBases>
		<comps>
			<li Class="CompProperties_Ingredients"/>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>6</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<socialPropernessMatters>true</socialPropernessMatters>
		<thingCategories>
			<li>ApiniNectarCategory</li>
		</thingCategories>
		<tickerType>Rare</tickerType>
		<pathCost>15</pathCost>
		<resourceReadoutPriority>Last</resourceReadoutPriority>
		<drawGUIOverlay>true</drawGUIOverlay>
		<ingestible>
			<foodType>Fluid</foodType>
			<preferability>DesperateOnly</preferability>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Ingest_Beer</ingestSound>
			<maxNumToIngestAtOnce>5</maxNumToIngestAtOnce>
			<optimalityOffsetHumanlikes>16</optimalityOffsetHumanlikes>
		</ingestible>
	</ThingDef>
