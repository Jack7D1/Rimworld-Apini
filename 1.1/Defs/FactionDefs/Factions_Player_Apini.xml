<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <FactionDef Abstract="True" Name="Playerbase">
    <settlementTexturePath>World/WorldObjects/Defaultbase</settlementTexturePath>
    <colorSpectrum>
      <li>(0, 0.737, 0.847)</li>
    </colorSpectrum>
  </FactionDef>

  <!-- Apini player faction -->
  <FactionDef ParentName="Playerbase">
    <defName>TribalApiniPlayer</defName>
    <label>apini hive</label>
    <description>A tribe of apini.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>ApiniPawn</basicMemberKind>
    <pawnSingular>apini</pawnSingular>
    <pawnsPlural>apinis</pawnsPlural>
    <factionNameMaker>NamerFactionHive</factionNameMaker>
    <settlementNameMaker>NamerbaseHive</settlementNameMaker>
    <playerInitialSettlementNameMaker>NamerbaseHive</playerInitialSettlementNameMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <hairTags>
      <li>Tribal</li>
      <li>Urban</li>
    </hairTags>
    <techLevel>Neolithic</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>ApiniBackstory</li>
        </categories>
      </li>
    </backstoryFilters>
    <pawnNameMaker>NamerPersonApini</pawnNameMaker>
    <settlementTexturePath>World/PlayerHiveZoom</settlementTexturePath>
    <factionIconPath>World/PlayerHive</factionIconPath>
    <colorSpectrum>
      <li>(255,165,0)</li>
    </colorSpectrum>
    <startingResearchTags>
      <li>TribalStart</li>
      <li>TribalStartTechprints</li>
      <li>Apiculture</li>
    </startingResearchTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Cloth</li>
      </thingDefs>
    </apparelStuffFilter>
  </FactionDef>
  
