<?xml version="1.0" encoding="utf-8"?>
<!-- A thanks to Saebbi for making this patch -->
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ApiniHoneyGlassHelmet -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="ApiniHoneyGlassHelmet"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>5</ArmorRating_Sharp>
					<Bulk>2</Bulk>
					<WornBulk>0.5</WornBulk>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="ApiniHoneyGlassHelmet"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>8</ArmorRating_Blunt>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="ApiniHoneyGlassHelmet"]/statBases/ArmorRating_Heat</xpath>
				<value>
					<ArmorRating_Heat>0.1</ArmorRating_Heat>
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="ApiniHoneyGlassHelmet"]/equippedStatOffsets/MoveSpeed</xpath>
			</li>
		</operations>
	</Operation>
</Patch>
